<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PatientMonitor"
        xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" x:Class="PatientMonitor.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="630" Width="800">

    <Grid Margin="0,0,0.333,14.667">
        <toolkit:Chart Title="Real-time ECG" Width="800" Height="400" VerticalAlignment="Top">
            <toolkit:LineSeries x:Name="lineSeriesECG"
                                        Title="ECG Channel1"
                                        IndependentValueBinding="{Binding Key}"
                                        DependentValueBinding="{Binding Value}">
                <toolkit:LineSeries.IndependentAxis>
                    <toolkit:LinearAxis Orientation="X" Title="Time" />
                </toolkit:LineSeries.IndependentAxis>
                <toolkit:LineSeries.DependentRangeAxis>
                    <toolkit:LinearAxis Orientation="Y" Title="Value" />
                </toolkit:LineSeries.DependentRangeAxis>
            </toolkit:LineSeries>
        </toolkit:Chart>
        <GroupBox x:Name="ParameterGroupBox" Header="Parameters" Width="380" HorizontalAlignment="Right" Margin="0,412,10.333,66.667" FontSize="16">
            <StackPanel Orientation="Vertical">
                <Slider x:Name="sliderECG" Minimum="0" Maximum="10" Value="5" Margin="0,0,0,10" Height="20" Width="350" VerticalAlignment="Top" IsEnabled="False"  IsEnabledChanged="sliderECG_IsEnabledChanged"/>
                <ComboBox x:Name="comboBoxParameters" HorizontalAlignment="Left" Margin="125,0,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.107,0.762" IsEnabled="False" IsEnabledChanged="comboBoxParameters_IsEnabledChanged">
                    <ComboBoxItem Content="ECG"/>
                    <ComboBoxItem Content="EEG"/>
                    <ComboBoxItem Content="EMG"/>
                    <ComboBoxItem Content="Respiration"/>
                </ComboBox>
            </StackPanel>
        </GroupBox>
        <GroupBox x:Name="PatientGroupBox" Header="Input Patient" Width="380" HorizontalAlignment="Left" Margin="23,412,0,66.667" FontSize="16">

            <Button x:Name="buttonCreatePatient" Content="Create Patient" Width="120" Margin="0,30,0,0" Height="30" Click="buttonCreatePatient_Click"/>

        </GroupBox>
        <Button x:Name="buttonParameter" Content="Start Parameters" HorizontalAlignment="Left" Margin="469,539,0,0" VerticalAlignment="Top" FontSize="16" IsEnabled="False" Click="buttonParameter_Click"/>
        <Button x:Name="buttonStop" Content="Stop" HorizontalAlignment="Left" Margin="609,539,0,0" VerticalAlignment="Top" FontSize="16"/>

    </Grid>
</Window>

